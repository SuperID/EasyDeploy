{% include "inc/head" %}

<body>
  {% include "inc/nav" %}
  <div class="container">
    {% include "inc/error" %}
    <div class="panel panel-default">
      <div class="panel-heading"><span class="panel-title">项目 {{input.name|escape}}</span></div>
      <div class="panel-body">
        <form class="form-horizontal" role="form" method="post">
          <div class="form-group">
            <label for="ipt-name" class="col-sm-2 control-label">名称</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="ipt-name" placeholder="名称" name="name" value="{{input.name|escape}}">
            </div>
          </div>
          <div class="form-group">
            <label for="ipt-description" class="col-sm-2 control-label">说明</label>
            <div class="col-sm-10">
              <textarea class="form-control" id="ipt-description" placeholder="说明" name="description" rows="5">{{input.description|escape}}</textarea>
            </div>
          </div>
          <div class="form-group">
            <label for="ipt-repository" class="col-sm-2 control-label">Git源</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="ipt-repository" placeholder="Git源" name="repository" value="{{input.repository|escape}}">
            </div>
          </div>
          <div class="form-group">
            <label for="ipt-branch" class="col-sm-2 control-label">分支</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="ipt-branch" placeholder="分支" name="branch" value="{{input.branch|escape}}">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-primary">保存</button>
              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              <button type="button" class="btn btn-danger btn-delete">删除</button>
            </div>
          </div>
        </form>
      </div>
    </div>
    {% if project %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <span class="panel-title">
          部署到服务器
          <a href="/project/{{input.name|escape}}/servers/add" class="btn btn-xs btn-default pull-right"><span class="glyphicon glyphicon-plus"></span></a>
        </span>
      </div>
      <div class="list-group">
        {% for item in project.servers %}
        <a href="{{'/project'|relative_url}}/{{project.name|escape}}/server/{{item.id|escape}}" class="list-group-item">
          <strong>{{item.name|escape}}</strong>
          <span class="text-muted">(路径: {{item.path|escape}}, 环境变量: {{item.env|escape}})</span>
        </a>
        {% endfor %}
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <span class="panel-title">部署动作</span></a>
        </span>
      </div>
      <div class="panel-body">
        <form class="form-horizontal" role="form" method="post">
          <input type="hidden" name="id" value="{{input.id|escape}}">
          <div class="form-group">
            <label for="ipt-name" class="col-sm-2 control-label">服务器</label>
            <div class="col-sm-10">
              <select class="form-control" id="ipt-name" placeholder="服务器" name="name">
              {% for item in data_server_list %}
                <option value="{{item.name|escape}}">{{item.name|escape}}</option>
              {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="ipt-action" class="col-sm-2 control-label">动作</label>
            <div class="col-sm-10">
              <select class="form-control" id="ipt-action" placeholder="动作" name="action">
              {% for item in data_action_list %}
                <option value="{{item.name|escape}}">{{item.name|escape}}</option>
              {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="button" class="btn btn-primary">执行</button>
            </div>
          </div>
        </form>
      </div>
    </div>
    {% endif %}
  </div>
</body>

{% include "inc/foot" %}

<script>
$('.btn-delete').click(function () {
  if (!confirm('是否确认删除？')) return;
  var $btn = $(this);
  $btn.button('loading');
  ajaxRequest.delete('{{"/project"|relative_url}}/{{input.name|escape}}.json', function (err, ret) {
    $btn.button('reset');
    if (err) return alert(err);
    location = '{{"/projects"|relative_url}}';
  });
});
</script>

