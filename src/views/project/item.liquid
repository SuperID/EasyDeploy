{% include "inc/head" %}

<body>
  {% include "inc/nav" %}
  <div class="container">
    {% include "inc/error" %}
    <div class="panel panel-default">
      <div class="panel-heading"><span class="panel-title">项目 {{input.name|escape}}</span></div>
      <div class="panel-body">
        <form class="form-horizontal" role="form" method="post">
          <div class="form-group">
            <label for="ipt-name" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="ipt-name" placeholder="Name" name="name" value="{{input.name|escape}}">
            </div>
          </div>
          <div class="form-group">
            <label for="ipt-description" class="col-sm-2 control-label">Description</label>
            <div class="col-sm-10">
              <textarea class="form-control" id="ipt-description" placeholder="Description" name="description" rows="5">{{input.description|escape}}</textarea>
            </div>
          </div>
          <div class="form-group">
            <label for="ipt-repository" class="col-sm-2 control-label">Repository</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="ipt-repository" placeholder="Repository" name="repository" value="{{input.repository|escape}}">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-primary">保存</button>
              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              <button type="button" class="btn btn-danger btn-delete">删除</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>

{% include "inc/foot" %}

<script>
$('.btn-delete').click(function () {
  if (!confirm('是否确认删除？')) return;
  var $btn = $(this);
  $btn.button('loading');
  ajaxRequest.delete('{{"/project"|relative_url}}/{{input.name|escape}}.json', function (err, ret) {
    $btn.button('reset');
    if (err) return alert(err);
    location = '{{"/projects"|relative_url}}';
  });
});
</script>

